// Auton First Step
void start() {

  // Get current GPS X coordinate and current GPS Y coordinate
  double x_coord = GPS15.xPosition(mm);
  double y_coord = GPS15.yPosition(mm);

  // check if the bot is at the correct starting location
  if x_coord > 1200 && y_coord > 1600 {
    Controller.Screen.print("Current X position: %.1f", x_coord);
    Controller.Screen.print("Current Y position: %.1f", y_coord);
  } else {
    Controller.Screen.print("Mission Failed");
  }

}

